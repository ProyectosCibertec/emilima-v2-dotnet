@model EmilimaV2Web.Models.User

@{
    ViewData["Title"] = "Eliminar";
}

        <h1>Eliminar</h1>

<h3>Estás seguro que deseas eliminar este item?</h3>
<div>
    <div>
        <a asp-action="Index"><i class="bi bi-arrow-left-square-fill h3"></i></a>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 py-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10 py-2">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2 py-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10 py-2">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2 py-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class = "col-sm-10 py-2">
            @Html.DisplayFor(model => model.Photo.Filename)
        </dd>
        <dt class = "col-sm-2 py-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10 py-2">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
        <dt class = "col-sm-2 py-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10 py-2">
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Username" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
